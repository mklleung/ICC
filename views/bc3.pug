extends layoutBS

block content
  .container.blueBC
    br
    hr
    .container.whiteBC
      img.imgCenter(src ='/images/bc3.png')
    br
    h2.white.underline Brandeis Chinese Cultural Connection
    p.white We aim to promote and share Chinese cultural awareness throughout the Brandeis community. All are welcome and encouraged to participate! Come to our next meeting or event!
    a(href='https://lists.brandeis.edu/wws/info/bc3')
        i.fa.fa-envelope
        |  Email List
    br
    br
    a(href='https://www.facebook.com/brandeisccc?fref=ts')
        i.fa.fa-facebook
        |  Facebook
    br
    br
    p.white.underline All BC3 Posts:
    ol.white
      each addPost in addPosts
        li
          e #{addPost.postTime}
          br
          e #{addPost.club} #{addPost.position} - #{addPost.name} #{addPost.year}
          br
          h2 #{addPost.title}
          i #{addPost.post}
          br
          br
      br
    hr
    br
