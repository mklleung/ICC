extends layoutBS

block content
  .container.blueBC
    br
    hr
    h2.white Delete Posts
    form.leftBorder.white(method="post" action="deletePost")
      ol
        each p in addPosts
          li
            input(name="deletePost" value=p._id type="checkbox")
            e   #{p.post}  |
            i   #{p.name}  |
            e   #{p.email}  |
            i   #{p.club}  |
            e   #{p.position}  |
            i   #{p.year}  |
            e   #{p.postTime}
      input(type="submit" value="Delete checked items")
    br
